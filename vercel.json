{
    "outputDirectory": "frontend/dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://luffydtaro-farmconnect.hf.space/api/:path*"
        },
        {
            "source": "/((?!api|assets|sitemap.xml|robots.txt|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).(jpg|jpeg|png|gif|svg|webp|ico|js|css)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=63072000; includeSubDomains; preload"
                }
            ]
        }
    ]
}